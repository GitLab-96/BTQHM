<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/loginImage"
                android:src="@drawable/header"/>

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Email"
             android:textSize="20sp"
             android:background="@drawable/eddittextdesign"
             android:padding="10dp"
             android:layout_margin="5dp"
             android:drawableStart="@drawable/ic_email_black_24dp"
             android:singleLine="true"
             android:id="@+id/loginEmail"
             android:drawableLeft="@drawable/ic_email_black_24dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="20sp"
                android:background="@drawable/eddittextdesign"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:id="@+id/loginPassword"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgetPassword"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="Forget Password?"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:id="@+id/loginButtn"
                android:layout_gravity="center"
                android:text="Login"
                android:background="@drawable/buttndesign"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/needNewAccount"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Need new Account ?"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="#360297"
                android:text="or Login Using Your"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:id="@+id/phone_login_Buttn"
                android:layout_gravity="center"
                android:text="Phone"
                android:background="@drawable/buttndesign"
                android:textAllCaps="false"/>





        </LinearLayout>



    </ScrollView>

</RelativeLayout>