<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/profileImage"
        android:src="@drawable/header"
        app:civ_border_width="5dp"
        app:civ_border_color="#3F2A63"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

    <EditText
        android:id="@+id/set_user_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:inputType="textImeMultiLine"
        android:hint="Set Title"
        android:drawableStart="@drawable/ic_title_black_24dp"
        android:drawableLeft="@drawable/ic_title_black_24dp"
        android:textColor="#1F9E93"
        android:textStyle="bold"
        android:background="@drawable/eddittextdesign"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_user_title"
        android:inputType="textImeMultiLine"
        android:hint="User Name"
        android:drawableStart="@drawable/ic_account_box_black_24dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:textColor="#1F9E93"
        android:textStyle="bold"
        android:background="@drawable/eddittextdesign"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/set_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_user_name"
        android:inputType="textImeMultiLine"
        android:hint="User Email"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:textColor="#1F9E93"
        android:textStyle="bold"
        android:background="@drawable/eddittextdesign"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/set_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_user_email"
        android:inputType="textImeMultiLine"
        android:hint="User Phone"
        android:drawableStart="@drawable/ic_account_box_black_24dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:textColor="#1F9E93"
        android:textStyle="bold"
        android:background="@drawable/eddittextdesign"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/set_user_phone"
        android:layout_margin="40dp"
        android:textAllCaps="false"
        android:background="@drawable/buttndesign"
        android:textColor="#fff"
        android:id="@+id/saveBttn"/>




</RelativeLayout>