<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#5321AD"
    android:layout_margin="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/get_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/header"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:civ_border_width="5dp"
        app:civ_border_color="#FF5722"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vice Principal"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:layout_below="@id/get_profile_image"
        android:id="@+id/headerVicePrincipal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bismillah Ta'limul Quran Madrasah"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:layout_below="@id/get_profile_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MD Masihur Rahman (Sumon)"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:layout_below="@id/get_profile_image"
        android:id="@+id/headername"/>

    <TextView
        android:id="@+id/headeremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_profile_image"
        android:layout_centerInParent="true"
        android:text="shukhernahor96@gmail.com"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01740719204"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/get_profile_image"
        android:id="@+id/headerphoneNo"/>





</LinearLayout>